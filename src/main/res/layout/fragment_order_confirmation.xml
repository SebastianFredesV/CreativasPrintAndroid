<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/confirmationIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/purple_500" />

        <TextView
            android:id="@+id/confirmationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Pedido Confirmado!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/confirmationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu pedido ha sido procesado exitosamente"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/orderSummaryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resumen del Pedido"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/orderNumberText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número: #00000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/orderTotalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: $0.00"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/orderStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado: Pendiente"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/orderDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha: N/A"
                    android:textSize="14sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/homeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver al Inicio"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/ordersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Mis Pedidos"
            style="@style/Widget.Material3.Button.TextButton"
            android:textColor="@color/purple_500" />

    </LinearLayout>

</ScrollView>