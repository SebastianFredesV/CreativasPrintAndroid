<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CreativasPrint" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Chip styling -->
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Action</item>
        <item name="chipStandaloneStyle">@style/Widget.MaterialComponents.Chip.Action</item>
    </style>

    <style name="Theme.CreativasPrint" parent="Base.Theme.CreativasPrint">
        <!-- NoActionBar version -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>